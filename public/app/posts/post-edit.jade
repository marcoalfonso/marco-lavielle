				form.form-horizontal(name="postsForm")
					fieldset
						legend Edit Post
						.form-group
							label.col-md-2.control-label(for="title") Title
							.col-md-10
								input.form-control(name="title", type="text", placeholder="Title", ng-model="post.title", required)
						.form-group
							label.col-md-2.control-label(for="subtitle") Sub-Title
							.col-md-10
								input.form-control(name="subtitle", type="text", placeholder="Subtitle", ng-model="post.subtitle", required)
						.form-group
							label.col-md-2.control-label(for="author") Author
							.col-md-10
								input.form-control(name="author", type="text", placeholder="Author", ng-model="post.author", required)
						.form-group
							label.col-md-2.control-label(for="body") Body
							.col-md-10
								textarea.form-control(name="body", id="bodyTextArea", rows="20", placeholder="Body", ng-model="post.body", required)
						.form-group
							.col-md-10.col-md-offset-2
								.pull-right
									button.btn.btn-primary(ng-click="updatePost()", ng-disabled="signupForm.$invalid") Update
									| &nbsp;
									a.btn.btn-default(href="/admin/dashboard") Cancel
